<body class="dialog">
<!-- Modal -->
<div class="hide modal" id="modal" role="dialog" tabindex="-1">
	<div id="modal-content"></div>
</div>

<div class="container">
	<div class="row">
		<div class="span3"></div>
		<div class="span6 dialog">
			<div class="logo" style="height:52px">
				<%= link_to image_tag("logo.png", :width => 169, :height => 52), root_path %>
			</div>
			<hr>
			

			<%= render 'layouts/messages' %>
			<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal form-horizontal'  }) do |f| %>
			<%= f.error_notification %>
			
			<h2>Resend confirmation instructions</h2>
				<%= f.input :email, :size => 50, :required => true  %>
				
				<div class="form-actions">
					<%= f.button :submit, 'Resend confirmation instructions', :class => 'btn-submit btn' %>
				</div>
			<% end %>


		</div>
		<div class="span3"></div>
	</div>
</div>



