<div class="container">
	<div class="row">
		<div class="span3"></div>
		<div class="span6 dialog">
			<div class="logo" style="height:52px">
				<%= link_to image_tag("logo.png", :width => 169, :height => 52), root_path %>
			</div>
			<hr>
			<%= render 'layouts/messages' %>
			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => 'form-horizontal form-horizontal' }) do |f| %>
			<%= f.error_notification %>
			<%= display_base_errors resource %>
			<%= f.full_error :reset_password_token %>
			<%= f.input :reset_password_token, :as => :hidden %>
			
			<h2>Change your password</h2>
			
			<%= f.input :password, :size => 50, :required => true  %>
			<p class="help-block">The password must be at least 6 characters.</p>
			<%= f.input :password_confirmation, :size => 50, :required => true  %>
			
			<div class="form-actions">
				<%= f.button :submit, 'Change Password', :class => 'btn-submit btn' %>
			</div>
			
			<% end %>


		</div>
		<div class="span3"></div>
	</div>
</div>