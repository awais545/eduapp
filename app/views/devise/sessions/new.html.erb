<!-- Modal -->
<div class="hide modal" id="modal" role="dialog" tabindex="-1">
	<div id="modal-content"></div>
</div>

<div class="container">
	<div class="row">
		<div class="span3"></div>
		<div class="span6 dialog">
			<div class="logo" style="height:52px">
				<%= link_to image_tag("logo.png", :width => 169, :height => 52), root_path %>
			</div>
			<hr>
			<%= render 'layouts/messages' %>
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal form-horizontal' }) do |f| %>
			<%= f.error_notification %>
			<%= display_base_errors resource %>

			<%= f.input :email, :size => 50, :required => true  %>
			<%= f.input :password, :size => 50, :required => true  %>

			<p class="help-block">
				<%= link_to "Forgot your password?", new_password_path(resource_name) %>
			</p>

			<div class="remember">
				<div class="control-group boolean optional user_remember_me">
					<div class="controls">
						<input name="user[remember_me]" type="hidden" value="0">
						<label class="checkbox">
							<input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">
							Remember me
						</label>
					</div>
				</div>
			</div>

			<div class="form-actions">
				<%= f.button :submit, 'Login', :class => 'btn-submit btn' %>
			</div>

			<% end %>



			<div class="dialog_footer"><font><font>
				No account yet?
			</font></font><a href="/users/sign_up"><font><font>Sign up now!</font></font></a>
		</div>

	</div>
	<div class="span3"></div>
</div>
</div>
